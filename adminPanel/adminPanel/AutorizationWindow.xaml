<Window x:Class="adminPanel.AutorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adminPanel"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.RowSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" BorderThickness="1" CornerRadius="15" Padding="30" Width="400">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
                    <Image Name="MainLogo" Source="Resourses/logo.png" Height="60"/>
                    <TextBlock Text="Login" FontSize="40" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0" />
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0 10">
                    <TextBlock Text="Login:" FontSize="20" HorizontalAlignment="Left" Foreground="#3B3B3B"/>
                    <TextBox Name="Login" Height="40" Width="250" HorizontalAlignment="Center" Padding="10" FontSize="16" Margin="0 10" BorderBrush="#A0A0A0" BorderThickness="1" Focusable="True"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0 10">
                    <TextBlock Text="Password:" FontSize="20" HorizontalAlignment="Left" Foreground="#3B3B3B"/>
                    <PasswordBox Name="Password" Height="40" Width="250" HorizontalAlignment="Center" Padding="10" FontSize="16" Margin="0 10" BorderBrush="#A0A0A0" BorderThickness="1"/>
                </StackPanel>

                <Button Name="LoginButton" Click="LoginButton_Click" FontWeight="Bold" Content="Login" Width="250" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10 20" FontSize="16" Background="#4CAF50" Foreground="White" BorderBrush="#4CAF50" BorderThickness="1" Padding="10,5" >

                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
